{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noUselessFragments": "error"
      },
      "suspicious": {
        "noExplicitAny": "off"
      },
      "correctness": {
        "noUnusedVariables": "error"
      }
    },
    "ignore": ["/generated"]
  },
  "javascript": {
    "formatter": {
      "trailingComma": "none"
    }
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 100,
    "indentSize": 2,
    "indentStyle": "space",
    "formatWithErrors": true,
    "ignore": ["/generated"]
  },
  "organizeImports": {
    "enabled": true,
    "ignore": ["/generated"]
  }
}
